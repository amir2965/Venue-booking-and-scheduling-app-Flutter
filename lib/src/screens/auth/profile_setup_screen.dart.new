  @override
  void initState() {
    super.initState();

    // Setup animation controller for fade-in effects
    _animationController = AnimationController(
      vsync: this,
      duration: const Duration(milliseconds: 500),
    );

    _fadeAnimation = Tween<double>(begin: 0.0, end: 1.0).animate(
      CurvedAnimation(
        parent: _animationController,
        curve: Curves.easeIn,
      ),
    );

    // Start the animation
    _animationController.forward();

    // Check if the user already has a profile, if so, redirect to home
    WidgetsBinding.instance.addPostFrameCallback((_) {
      _checkForExistingProfile();
    });
  }

  // This ensures a returning user can't access profile setup again
  Future<void> _checkForExistingProfile() async {
    try {
      // Get directly from the profile service for a more reliable check
      final profileService = ref.read(playerProfileServiceProvider);
      final userProfile = await profileService.getCurrentUserProfile();

      // Also check the provider for consistency
      final hasCompletedProfile =
          await ref.read(hasCompletedProfileSetupProvider.future);

      debugPrint(
          'Profile check: userProfile exists=${userProfile != null}, hasCompletedProfile=$hasCompletedProfile');

      if (hasCompletedProfile) {
        debugPrint('User already has a profile - redirecting to home screen');
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            const SnackBar(
              content: Text('You already have a profile set up'),
              duration: Duration(seconds: 1),
            ),
          );

          await Future.delayed(const Duration(milliseconds: 100));

          if (mounted) {
            context.go('/home');
          }
        }
      }
    } catch (e) {
      debugPrint('Error checking for existing profile: $e');
    }
  }

  @override
  void dispose() {
    _debounceTimer?.cancel();
    _animationController.dispose();
    _nameController.dispose();
    _firstNameController.dispose();
    _bioController.dispose();
    _locationController.dispose();
    super.dispose();
  }

  // Helper method to pick image from gallery or camera
  Future<void> _pickImage(ImageSource source) async {
    setState(() {
      _isLoading = true;
    });

    try {
      final XFile? image = await _picker.pickImage(
        source: source,
        imageQuality: 80,
        maxWidth: 800,
