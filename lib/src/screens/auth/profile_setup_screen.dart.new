  // Save the profile data
  Future<void> _saveProfile() async {
    // First validate the form using the form key
    if (!_formKey.currentState!.validate()) {
      return;
    }

    final state = ref.read(profileSetupProvider);

    // Also check the provider's validation      
    if (!state.isFormValid) {
      // Identify which specific fields are missing
      List<String> missingFields = [];
      if (state.username.isEmpty) missingFields.add('Username');
      if (state.firstName.isEmpty) missingFields.add('First Name');
      if (state.location == null || state.location!.isEmpty) {
        missingFields.add('Location');
      }
      if (state.availability.isEmpty) missingFields.add('Availability');

      String errorMessage =
          'Please complete these required fields: ${missingFields.join(', ')}';

      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text(errorMessage),
          backgroundColor: Colors.red,
          duration: const Duration(seconds: 3),
          action: SnackBarAction(
            label: 'OK',
            textColor: Colors.white,
            onPressed: () {
              ScaffoldMessenger.of(context).hideCurrentSnackBar();
            },
          ),
        ),
      );
      return;
    } 
    
    // Check username availability one last time before saving
    final profileService = ref.read(playerProfileServiceProvider);
    try {
      final usernameAvailable =
          await profileService.isUsernameAvailable(state.username);
      if (!usernameAvailable) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text(
                'Username "${state.username}" is already taken. Please choose another.'),
            backgroundColor: Colors.red,
            duration: const Duration(seconds: 3),
          ),
        );
        return;
      }
    } catch (e) {
      debugPrint('Error validating username during profile save: $e');

      // Check if it's an offline error
      if (e.toString().contains('network') ||
          e.toString().contains('connection') ||
          e.toString().contains('offline')) {
        // For offline scenarios, we'll warn the user but allow them to continue
        // since our enhanced service handles offline username reservation
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text(
                'You appear to be offline. Username will be reserved when you\'re back online.'),
            backgroundColor: Colors.blue,
            duration: const Duration(seconds: 3),
          ),
        );

        // Continue with profile save in offline mode
        setState(() {
          _isLoading = true;
        });

        // Proceed with the normal save flow
      } else {
        // For other errors, show a retry option
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Error checking username. Please try again.'),
            backgroundColor: Colors.orange,
            duration: const Duration(seconds: 3),
            action: SnackBarAction(
              label: 'Retry',
              onPressed: () {
                _saveProfile();
              },
              textColor: Colors.white,
            ),
          ),
        );
        return;
      }
    }

    setState(() {
      _isLoading = true;
    });

    try {
      // Get current user
      final authUserAsync = ref.read(authUserProvider);
      final user = authUserAsync.valueOrNull;

      if (user == null) {
        throw Exception('User not authenticated');
      } 
      
      // Determine numerical skill level based on selected option
      double skillLevelValue = 1.0; // Always start at level 1 regardless of selection
      // We still save their selected skill tier for display purposes
      
      // Create PlayerProfile object
      final profile = PlayerProfile(
        user: user.copyWith(displayName: state.username),
        bio: state.bio,
        skillLevel: skillLevelValue,
        preferredGameTypes: [state.playStyle], // Using play style as game type for now
        availability: state.availability,
        skillTier: state.skillLevel,
        preferredLocation: state.location,
        experiencePoints: 10, // All new users start with 10 XP
        firstName: state.firstName, // Add the first name
      );

      // Update profile
      final success = await profileService.updatePlayerProfile(profile);

      // Simulate a loading delay for UX
      await Future.delayed(const Duration(seconds: 2));
      if (success) {
        if (mounted) {
          // Show success message
          ScaffoldMessenger.of(context).showSnackBar(
            const SnackBar(
              content: Text('Profile setup complete!'),
              backgroundColor: Colors.green,
              duration: Duration(seconds: 2),
            ),
          );

          // Refresh the profile setup provider
          ref.invalidate(hasCompletedProfileSetupProvider);

          // Add a small delay before navigation to show the success message
          await Future.delayed(const Duration(milliseconds: 500));

          // Navigate to home screen
          if (mounted) {
            context.go('/home');
          }
        }
      } else {
        throw Exception(
            'Failed to save profile. Username may be taken by someone else.');
      }
    } catch (e) {
      debugPrint('Error saving profile: $e');
      if (mounted) {
        String errorMessage = 'Error saving profile';

        // Provide more specific error messages for common issues
        if (e.toString().contains('Username')) {
          errorMessage =
              'Username is already taken. Please try a different one.';
        } else if (e.toString().contains('network')) {
          errorMessage =
              'Network error. Please check your connection and try again.';
        } else {
          errorMessage =
              'Error saving profile: ${e.toString().split(":").last.trim()}';
        }

        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text(errorMessage),
            backgroundColor: Colors.red,
            duration: const Duration(seconds: 4),
            action: SnackBarAction(
              label: 'Try Again',
              textColor: Colors.white,
              onPressed: () {
                _saveProfile();
              },
            ),
          ),
        );
      }
    } finally {
      if (mounted) {
        setState(() {
          _isLoading = false;
        });
      }
    }
  }

  // Helper to determine skill tier from numeric skill level
  String _getSkillTier(double skillLevel) {
    if (skillLevel < 1.0) return 'Beginner';
    if (skillLevel < 2.0) return 'Novice';
    if (skillLevel < 3.0) return 'Intermediate';
    if (skillLevel < 4.0) return 'Advanced';
    if (skillLevel < 4.5) return 'Expert';
    return 'Pro';
  }

  // Check if username is unique with debouncing
  Future<void> _validateUsername(String username) async {
    // Cancel any previous timer
    if (_debounceTimer?.isActive ?? false) {
      _debounceTimer!.cancel();
    }

    // Don't check too short usernames
    if (username.trim().length < 3) return;

    // Set a debounce timer to avoid too many requests while typing
    _debounceTimer = Timer(const Duration(milliseconds: 500), () async {
      if (!mounted) return;

      setState(() {
        _isCheckingUsername = true;
      });
      try {
        final profileService = ref.read(playerProfileServiceProvider);
        final isAvailable = await profileService.isUsernameAvailable(username);

        if (mounted) {
          setState(() {
            _isUsernameAvailable = isAvailable;
            _isCheckingUsername = false;
          });

          // Show feedback to user if username is taken
          if (!isAvailable && username.trim().length >= 3) {
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(
                content: Text(
                    'Username "$username" is already taken. Please choose another.'),
                backgroundColor: Colors.red,
                duration: const Duration(seconds: 2),
              ),
            );
          }
        }
      } catch (e) {
        debugPrint('Error checking username: $e');
        if (mounted) {
          setState(() {
            _isCheckingUsername = false;
          }); 
          // Check if it's an offline error
          if (e.toString().contains('network') ||
              e.toString().contains('connection') ||
              e.toString().contains('offline') ||
              e.toString().contains('SocketException') ||
              e.toString().contains('Failed host lookup') ||
              e.toString().contains('Connection refused')) {
            // Show server connection specific message
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(
                content: Text(
                    'Unable to connect to username server. Username availability checked locally.'),
                backgroundColor: Colors.orange,
                duration: const Duration(seconds: 3),
              ),
            );
          } else {
            // Show generic error message
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(
                content: Text(
                    'Error checking username availability. Please try again.'),
                backgroundColor: Colors.orange,
                duration: const Duration(seconds: 2),
                action: SnackBarAction(
                  label: 'Retry',
                  onPressed: () {
                    _validateUsername(username);
                  },
                ),
              ),
            );
          }
        }
        if (mounted) {
          setState(() {
            _isCheckingUsername = false;
          });
        }
      }
    });
  }
  // Helper to set controller initial values when form loads
  void _setInitialValues(User user) {
    if (_nameController.text.isEmpty && user.displayName != null) {
      _nameController.text = user.displayName!;
      ref.read(profileSetupProvider.notifier).setUsername(user.displayName!);
    }
  }

